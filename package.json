{
    "name": "showcase-api",
    "version": "1.0.50",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "bun run --watch src/index.ts",
        "build": "bun build --compile --minify --target bun --outfile server ./src/index.ts",
        "db:generate": "bunx drizzle-kit generate --dialect sqlite --schema ./src/db/schema.ts",
        "db:migrate": "bun run ./scripts/migrator.ts",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@elysiajs/static": "^1.3.0",
        "@octokit/rest": "^22.0.0",
        "@paralleldrive/cuid2": "^2.2.2",
        "capture-website": "^4.2.0",
        "date-fns": "^4.1.0",
        "drizzle-orm": "^0.44.2",
        "elysia": "latest",
        "envalid": "^8.0.0",
        "isomorphic-dompurify": "^2.25.0",
        "marked": "^15.0.12",
        "p-limit": "^6.2.0"
    },
    "devDependencies": {
        "@types/bun": "^1.2.16",
        "bun-types": "latest",
        "drizzle-kit": "^0.31.1",
        "prettier": "^3.5.3"
    },
    "module": "src/index.js"
}
